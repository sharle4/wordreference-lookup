{
  "manifest_version": 3,
  "name": "WordReference Lookup",
  "version": "1.0.1",
  "description": "Sélectionnez un mot pour le rechercher rapidement sur WordReference dans un pop-up ou un onglet.",
  "permissions": [
    "contextMenus",
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.wordreference.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "WordReference Lookup"
  },
  "options_page": "options/options.html",
  "commands": {
    "lookup-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Rechercher la sélection sur WordReference"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/modal.html",
        "content/modal.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}