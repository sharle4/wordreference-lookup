{
  "manifest_version": 3,
  "name": "WordReference Lookup",
  "version": "2.0.0",
  "description": "Sélectionnez un mot pour le rechercher rapidement sur WordReference dans un pop-up.",
  "permissions": [
    "contextMenus",
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.wordreference.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "WordReference Lookup",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "commands": {
    "lookup-selection": {
      "suggested_key": {
        "default": "Alt+Y",
        "mac": "Alt+Y"
      },
      "description": "Rechercher la sélection sur WordReference"
    }
  }
}

