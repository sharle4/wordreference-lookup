{
  "manifest_version": 3,
  "name": "Duo Dictionary Lookup",
  "version": "3.0.0",
  "description": "Cherchez un mot sur Cambridge Dictionary (popup) ou WordReference (nouvel onglet).",
  "permissions": [
    "contextMenus",
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://dictionary.cambridge.org/*",
    "https://www.wordreference.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Duo Dictionary Lookup",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "commands": {
    "lookup-cambridge": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Chercher sur Cambridge Dictionary (dans le pop-up)"
    },
    "lookup-wordreference-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Chercher sur WordReference (nouvel onglet)"
    }
  }
}